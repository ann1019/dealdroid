<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.chemlab.dealdroid" android:versionCode="1"
	android:versionName="1.0.0">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.VIBRATE" />
	
	<application android:icon="@drawable/icon" android:label="@string/app_name">
	
		<!-- The app's UI is just a preferences page right now -->
		<activity android:name=".Preferences" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<!-- The receiver invoked when the alarms fire -->
		<receiver android:name=".SiteChecker" android:enabled="true" android:exported="false" android:label="SiteChecker">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<action android:name="org.chemlab.dealdroid.DEALDROID_START" />
				<action android:name="org.chemlab.dealdroid.DEALDROID_STOP" />
				<action android:name="org.chemlab.dealdroid.CHECK_SITES" />
			</intent-filter>
		</receiver>
		
	</application>
	
</manifest> 